{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],        // <-- ensures Node.js globals like 'process' are recognized
    "resolveJsonModule": true, // <-- optional, useful if you import JSON
    "allowJs": true            // <-- optional, allows JavaScript imports if needed
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
